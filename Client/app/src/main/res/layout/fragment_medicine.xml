<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TimePicker
        android:id="@+id/medicine_fragment_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:timePickerMode="spinner"/>

    <!--<ImageView-->
        <!--android:id="@+id/medicine_fragment_add_new_pill"-->
        <!--android:layout_width="32dp"-->
        <!--android:layout_height="32dp"-->
        <!--android:layout_below="@+id/medicine_fragment_time"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:src="@drawable/add_item_image"-->
        <!--android:layout_marginLeft="16dp"/>-->

    <EditText
        android:id="@+id/medicine_fragment_pill_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_fragment_time"/>
        <!--android:layout_toLeftOf="@+id/medicine_fragment_add_new_pill" />-->

    <EditText
        android:id="@+id/medicine_fragment_pill_value"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_fragment_pill_choice"
        android:inputType="number"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/medicine_fragment_pill_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_fragment_pill_choice"
        android:layout_marginTop="32dp"
        android:text="@string/value_in_things"
        android:layout_toRightOf="@+id/medicine_fragment_pill_value"/>

    <Spinner
        android:id="@+id/medicine_fragment_period_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_fragment_pill_value"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/medicine_fragment_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_btn_txt"
        android:layout_below="@+id/medicine_fragment_period_choice"
        android:layout_marginTop="16dp"/>

</RelativeLayout>