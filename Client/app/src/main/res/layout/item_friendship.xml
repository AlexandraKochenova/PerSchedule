<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_friendship_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_toLeftOf="@+id/item_friendship_add_btn"
        />

    <TextView
        android:id="@+id/item_friendship_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_friendship_name_text"
        android:layout_toLeftOf="@+id/item_friendship_add_btn"
        />

    <ImageView
        android:id="@+id/item_friendship_add_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/add_item_image" />

    <ImageView
        android:id="@+id/item_friendship_delete_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/baseline_remove_black_36dp" />

</RelativeLayout>