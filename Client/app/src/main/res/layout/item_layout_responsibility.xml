<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/responsibility_done_check_box"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/responsibility_time_text"
        android:padding="16dp"
        android:text="21:30"
        android:layout_toLeftOf="@id/responsibility_done_check_box" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/responsibility_product"
        android:padding="16dp"
        android:layout_toLeftOf="@id/responsibility_time_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/responsibility_name"
        android:padding="16dp"
        android:layout_toLeftOf="@+id/responsibility_time_text"/>


</RelativeLayout>